<?xml version="1.0"?>
<config>
    <modules>
        <Rajat_Mymodule>
            <version>0.1.0</version>
        </Rajat_Mymodule>
    </modules>
    <frontend>
        <layout>
            <updates>
                <adminform>
                    <file>adminform.xml</file>
                </adminform>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminform>
                <use>admin</use>
                <args>
                    <module>Rajat_Mymodule</module>
                    <frontName>Form</frontName>
                </args>
            </adminform>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <adminform module="adminform">
                <title>Rajat Module</title>
                <sort_order>100</sort_order>
                <children>
                    <items module="adminform">
                        <title>Configuration</title>
                        <sort_order>0</sort_order>
                        <action>adminform/adminhtml_adminform</action>
                    </items>
                </children>
            </adminform>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Rajat_Mymodule>
                            <title>Adminform Module</title>
                            <sort_order>10</sort_order>
                        </Rajat_Mymodule>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <adminform>
                    <file>adminform.xml</file>
                </adminform>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <adminform>
                <class>Rajat_Mymodule_Model</class>
                <resourceModel>adminform_mysql4</resourceModel>
            </adminform>
            <adminform_mysql4>
                <class>Rajat_Mymodule_Model_Mysql4</class>
                <entities>
                    <adminform>
                        <table>adminform</table>
                    </adminform>
                </entities>
            </adminform_mysql4>
        </models>
        <resources>
            <adminform_setup>
                <setup>
                    <module>Rajat_Mymodule</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </adminform_setup>
            <adminform_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </adminform_write>
            <adminform_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </adminform_read>
        </resources>
        <blocks>
            <adminform>
                <class>Rajat_Mymodule_Block</class>
            </adminform>
        </blocks>
        <helpers>
            <adminform>
                <class>Rajat_Mymodule_Helper</class>
            </adminform>
        </helpers>
    </global>
</config>